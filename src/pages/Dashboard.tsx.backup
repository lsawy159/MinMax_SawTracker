    activeInsurance: 0,
    expiredInsurance: 0,
    expiringInsurance30: 0,
    expiringInsurance60: 0,
    expiringInsurance90: 0,
    totalAvailableSlots: 0,
    fullCompanies: 0,
    companiesWithFewSlots: 0
  })
