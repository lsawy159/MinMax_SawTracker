        totalEmployees: employees.length,
        totalCompanies: companies.length,
        expiringContracts,
        expiringResidences,
        expiredContracts,
        expiredResidences,
        urgentContracts,
        urgentResidences,
        activeInsurance,
        expiredInsurance,
        expiringInsurance30,
        expiringInsurance60,
        expiringInsurance90,
        totalAvailableSlots,
        fullCompanies,
        companiesWithFewSlots
