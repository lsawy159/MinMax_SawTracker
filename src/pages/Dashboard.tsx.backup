                      <div>
                        <p className="text-sm font-medium text-yellow-900">ينتهي خلال 30 يوم</p>
                        <p className="text-xs text-yellow-700">ينبغي تجديده قريباً</p>
                      </div>
                    </div>
                    <div className="text-3xl font-bold text-yellow-600">{stats.expiringInsurance30}</div>
                  </div>
                </div>

                {/* تأمين ينتهي خلال 60 يوم */}
                <div className="bg-orange-50 border-r-4 border-orange-600 p-4 rounded-lg">
                  <div className="flex items-center justify-between">
                    <div className="flex items-center gap-3">
                      <div className="bg-orange-100 p-2 rounded-lg">
                        <Clock className="w-6 h-6 text-orange-600" />
                      </div>
                      <div>
                        <p className="text-sm font-medium text-orange-900">ينتهي خلال 60 يوم</p>
                        <p className="text-xs text-orange-700">التخطيط للتجديد مطلوب</p>
                      </div>
                    </div>
                    <div className="text-3xl font-bold text-orange-600">{stats.expiringInsurance60}</div>
                  </div>
                </div>

                {/* تأمين ساري */}
                <div className="bg-green-50 border-r-4 border-green-600 p-4 rounded-lg">
                  <div className="flex items-center justify-between">
                    <div className="flex items-center gap-3">
                      <div className="bg-green-100 p-2 rounded-lg">
                        <Users className="w-6 h-6 text-green-600" />
                      </div>
                      <div>
                        <p className="text-sm font-medium text-green-900">تأمين ساري</p>
                        <p className="text-xs text-green-700">لا توجد مخاوف حالياً</p>
                      </div>
                    </div>
                    <div className="text-3xl font-bold text-green-600">{stats.activeInsurance}</div>
                  </div>
                </div>
              </div>
            </div>

            {/* إحصائية إجمالية */}
              <div className="mt-6 pt-6 border-t border-gray-200">
                <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div className="bg-gradient-to-r from-red-50 to-orange-50 p-4 rounded-lg">
                    <p className="text-sm text-gray-700 mb-1">إجمالي التنبيهات الحرجة والعاجلة</p>
                    <p className="text-3xl font-bold text-red-600">
                      {stats.expiredContracts + stats.expiredResidences + stats.urgentContracts + stats.urgentResidences + stats.expiredInsurance + stats.expiringInsurance30}
                    </p>
                  </div>
                  <div className="bg-gradient-to-r from-blue-50 to-purple-50 p-4 rounded-lg">
                    <p className="text-sm text-gray-700 mb-1">نسبة التنبيهات الحرجة</p>
                    <p className="text-3xl font-bold text-blue-600">
                      {stats.totalEmployees > 0 
                        ? Math.round(((stats.expiredContracts + stats.expiredResidences + stats.expiredInsurance) / stats.totalEmployees) * 100) 
                        : 0}%
                    </p>
                  </div>
                </div>
              </div>

              {/* قسم تنبيهات الأماكن الشاغرة */}
              <div className="mt-6 pt-6 border-t border-gray-200">
                <h3 className="text-lg font-semibold text-gray-800 mb-4 flex items-center gap-2">
                  <MapPin className="w-5 h-5 text-green-600" />
                  تنبيهات الأماكن الشاغرة
                </h3>
                
                <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
                  {/* المؤسسات المكتملة */}
                  {stats.fullCompanies > 0 && (
                    <div 
                      className="bg-red-50 border-r-4 border-red-600 p-4 rounded-lg cursor-pointer hover:bg-red-100 transition"
                      onClick={() => navigate('/companies')}
                    >
                      <div className="flex items-center justify-between">
                        <div className="flex items-center gap-3">
                          <div className="bg-red-100 p-2 rounded-lg">
                            <XCircle className="w-6 h-6 text-red-600" />
                          </div>
                          <div>
                            <p className="text-sm font-medium text-red-900">مؤسسات مكتملة</p>
                            <p className="text-xs text-red-700">لا يمكن إضافة موظفين</p>
                          </div>
                        </div>
                        <div className="text-3xl font-bold text-red-600">{stats.fullCompanies}</div>
                      </div>
                      <div className="mt-2 flex items-center gap-1 text-red-600 text-xs">
                        <span>عرض المؤسسات</span>
                        <ArrowRight className="w-3 h-3" />
                      </div>
                    </div>
                  )}

                  {/* المؤسسات بأماكن قليلة */}
                  {stats.companiesWithFewSlots > 0 && (
                    <div 
                      className="bg-orange-50 border-r-4 border-orange-600 p-4 rounded-lg cursor-pointer hover:bg-orange-100 transition"
                      onClick={() => navigate('/companies')}
                    >
                      <div className="flex items-center justify-between">
                        <div className="flex items-center gap-3">
                          <div className="bg-orange-100 p-2 rounded-lg">
                            <Clock className="w-6 h-6 text-orange-600" />
                          </div>
                          <div>
                            <p className="text-sm font-medium text-orange-900">أماكن قليلة</p>
                            <p className="text-xs text-orange-700">حد أقصى مكانين متبقيين</p>
                          </div>
                        </div>
                        <div className="text-3xl font-bold text-orange-600">{stats.companiesWithFewSlots}</div>
                      </div>
                      <div className="mt-2 flex items-center gap-1 text-orange-600 text-xs">
                        <span>عرض المؤسسات</span>
                        <ArrowRight className="w-3 h-3" />
                      </div>
                    </div>
                  )}

                  {/* إجمالي الأماكن المتاحة */}
                  {stats.totalAvailableSlots > 0 && (
                    <div 
                      className="bg-green-50 border-r-4 border-green-600 p-4 rounded-lg cursor-pointer hover:bg-green-100 transition"
                      onClick={() => navigate('/companies')}
                    >
                      <div className="flex items-center justify-between">
                        <div className="flex items-center gap-3">
                          <div className="bg-green-100 p-2 rounded-lg">
                            <MapPin className="w-6 h-6 text-green-600" />
                          </div>
                          <div>
                            <p className="text-sm font-medium text-green-900">أماكن متاحة</p>
                            <p className="text-xs text-green-700">يمكن إضافة موظفين جدد</p>
                          </div>
                        </div>
                        <div className="text-3xl font-bold text-green-600">{stats.totalAvailableSlots}</div>
                      </div>
                      <div className="mt-2 flex items-center gap-1 text-green-600 text-xs">
                        <span>عرض المؤسسات</span>
                        <ArrowRight className="w-3 h-3" />
                      </div>
                    </div>
                  )}
                </div>
              </div>
            </div>
          </>
        )}
      </div>
    </Layout>
  )
}
