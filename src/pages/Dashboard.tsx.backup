        const maxEmployees = company.max_employees || 4
        const availableSlots = Math.max(0, maxEmployees - employeeCount)
        
        totalAvailableSlots += availableSlots
        
        if (availableSlots === 0) {
          fullCompanies++
        } else if (availableSlots <= 2) {
          companiesWithFewSlots++
        }
      }

